{
	"scheme": {
		"comment": "QML",
		"suffixes": ["qml"],
		"highlight": [{
			"comment": "numbers",
			"match": "\\b\\d+(\\.\\d*)?\\b",
			"color": "#E6713E",
			"bold": true
		}, {
			"comment": "objects",
			"match": "\\b[A-Z]\\w*\\b",
			"color": "#319CD3",
			"bold": true
		}, {
			"comment": "functions",
			"match": "\\b[\\w_]+\\s*(?=\\()",
			"color": "#319CD3",
			"bold": true
		}, {
			"comment": "handlers",
			"match": "(((^|\\{)\\s*)|\\b)on[A-Z]\\w*\\b",
			"color": "#C678DD",
			"bold": true
		}, {
			"comment": "keywords",
			"match": "(?:\\b|\\s+)(?:(true|false|null|property|function|import|undefined)|(var|void)|(on|as|alias|enum|connect|break|case|catch|continue|debugger|default|delete|do|else|finally|for|if|in|instanceof|new|readonly|return|signal|switch|this|throw|try|typeof|while|with))\\b",
			"color": "#C678DD",
			"bold": true
		}, {
			"comment": "properties",
			"match": "(?:^|\\{|;)\\s*[a-z][\\w\\.]*\\s*(?=\\:)",
			"color": "#9DA5B4",
			"bold": true
		}, {
			"comment": "strings",
			"match": "\".*\"",
			"color": "#9DA5B4"
		}, {
			"comment": "inline comments",
			"match": "//.*$",
			"color": "#888",
			"italic": true
		}]
	}
}
